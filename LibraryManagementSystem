/*SELECTING THE DATA*/

-- Retrieve all data from the Librarian table
SELECT * FROM Librarian;

-- Retrieve all data from the Member table
SELECT * FROM Member;

-- Retrieve all data from the Book table
SELECT * FROM Book;

-- Retrieve all data from the Borrow table
SELECT * FROM Borrow;

-- 1. Find all books in the 'Science Fiction' category (assuming Category_ID = 3)
SELECT Book_ID, Title, Price FROM Book
WHERE Category_ID = 3;

-- 2. Find all members who joined in the year 2023
SELECT First_Name, Last_Name, Membership_Date FROM Member
WHERE Membership_Date BETWEEN '2023-01-01' AND '2023-12-31';

-- 3. Find all current, unreturned borrowed books (Return_Date is NULL)
SELECT Issue_ID, Member_ID, Book_ID, Due_Date FROM Borrow
WHERE Return_Date IS NULL;

-- 4. Find librarians who are not 'Head Librarian'
SELECT Name, Role FROM Librarian
WHERE Role <> 'Head Librarian';

/*UPDATE QUERIES*/

UPDATE Book
SET Price = 16.50
WHERE Title = '1984';

-- Update the address for the member with ID 3 (Ada Lovelace)
UPDATE Member
SET Address = '500 Computation Drive, London'
WHERE Member_ID = 3;


-- Update the role for the librarian with ID 2 (Bob Johnson)
UPDATE Librarian
SET Role = 'Supervisor'
WHERE Librarian_ID = 2;

-- Record the return of Book ID 5 by Member ID 3, returned today (November 16, 2025)
UPDATE Borrow
SET Return_Date = '2025-11-16'
WHERE Member_ID = 3 AND Book_ID = 5 AND Return_Date IS NULL;


-- Change the category name 'Classic Literature' to 'Literary Classics'
UPDATE Category
SET Category_Name = 'Literary Classics'
WHERE Category_Name = 'Classic Literature';


/*DELETE QUERIES*/

-- Step 1: Delete all books published by the publisher with ID 5 (Houghton Mifflin Harcourt)
DELETE FROM Book
WHERE Publisher_ID = 5;

-- Step 2: Now that the dependent books are gone, delete the Publisher
DELETE FROM Publisher
WHERE Publisher_ID = 5;